<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.Build.NoTargets">

  <PropertyGroup>
    <TargetFrameworkVersion>v4.7.1</TargetFrameworkVersion>
    <TargetFramework>net471</TargetFramework>
    <RestoreProjectStyle>PackageReference</RestoreProjectStyle>
    <SolutionRootPath>src</SolutionRootPath>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="FredrikHr.PowerPlatformSdkExtensions.MSBuild.Solution">
      <PrivateAssets>all</PrivateAssets>
      <ProjectReference>..\..\build\FredrikHr.PowerPlatformSdkExtensions.MSBuild.Solution\FredrikHr.PowerPlatformSdkExtensions.MSBuild.Solution.csproj</ProjectReference>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <None Include="$(MSBuildThisFileDirectory)$(SolutionRootPath)\**" />
    <ExcludeDirectories Include="$(MSBuildThisFileDirectory)$(SolutionRootPath)\PluginAssemblies\*\*.dll" />
    <ExcludeDirectories Include="$(MSBuildThisFileDirectory)$(SolutionRootPath)\pluginpackages\*\package\*.nupkg" />
    <ExcludeDirectories Include="$(MSBuildThisFileDirectory)$(SolutionRootPath)\environmentvariabledefinitions\*\environmentvariablevalues.json" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\pluginpackages\FredrikHr.PowerPlatformSdkExtensions.DataverseInformationPlugins\FredrikHr.PowerPlatformSdkExtensions.DataverseInformationPlugins.csproj" />
  </ItemGroup>

</Project>
